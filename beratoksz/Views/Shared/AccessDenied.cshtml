@{
    ViewData["Title"] = "Erişim Engellendi";
    Layout = null; // Tam sayfa görünüm için layout'u kaldırıyoruz.
}
@using Microsoft.AspNetCore.Authorization
@attribute [AllowAnonymous]

<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="utf-8" />
    <title>@ViewData["Title"]</title>
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <!-- Bootstrap ve modern.css dosyası dahil -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link href="~/css/modern.css" rel="stylesheet" />
    <!-- Lottie Player kütüphanesi -->
    <script src="https://unpkg.com/%40lottiefiles/lottie-player@latest/dist/lottie-player.js"></script>
</head>
<body>
    <div class="d-flex justify-content-center align-items-center vh-100">
        <div class="text-center p-4 no-shadow">
            <lottie-player 
                src="https://assets9.lottiefiles.com/packages/lf20_jcikwtux.json"  
                background="transparent"  
                speed="1"  
                style="height: 250px;"  
                loop 
                autoplay>
            </lottie-player>
            <h1 class="display-5 text-danger mt-3">Erişim Engellendi</h1>
            <p class="lead">Üzgünüz, bu sayfaya erişim yetkiniz bulunmamaktadır.</p>
            <a href="javascript:history.back()" class="btn btn-primary mt-3">Geri Dön</a>
        </div>
    </div>
</body>
</html>