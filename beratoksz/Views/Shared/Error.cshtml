@{
    ViewData["Title"] = "Bir Hata Oluştu";
    Layout = null; // Layout kullanmıyoruz, sayfa tamamen bağımsız.
}
@using Microsoft.AspNetCore.Authorization
@attribute [AllowAnonymous]

<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="utf-8" />
    <title>@ViewData["Title"]</title>
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <!-- Bootstrap ve global modern.css dahil -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link href="~/css/modern.css" rel="stylesheet" />
    <!-- Lottie Player kütüphanesi -->
    <script src="https://unpkg.com/%40lottiefiles/lottie-player@latest/dist/lottie-player.js"></script>
</head>
<body>
    <div class="container py-5">
        <div class="row justify-content-center">
            <div class="col-md-8 col-lg-6 text-center">
                <!-- Canlı Lottie Animasyonu -->
                <lottie-player src="https://assets9.lottiefiles.com/packages/lf20_x62chJ.json"
                               background="transparent"
                               speed="1"
                               style="height: 150px;"
                               loop
                               autoplay>
                </lottie-player>
                <h1 class="display-5 text-danger mt-3">Oops! Bir şeyler ters gitti.</h1>
                <p class="lead">Beklenmeyen bir hata meydana geldi. Lütfen daha sonra tekrar deneyin.</p>
                <a href="/" class="btn btn-primary mt-3">Ana Sayfaya Dön</a>
            </div>
        </div>
    </div>
</body>
</html>
