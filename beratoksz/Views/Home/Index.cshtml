@{
    Layout = "_Layout";  // Genel (public) layout
    ViewData["Title"] = "Hoşgeldiniz";
}
<script src="~/js/home_index.js"></script>

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-md-6 text-center">
            <h1 class="display-4">Hoşgeldiniz!</h1>
            <p class="lead">Sistemimize giriş yaparak özel içeriklere erişebilirsiniz.</p>

            <div id="guestActions" style="display: block;">
                <button id="login-btn" class="btn btn-primary btn-lg">Giriş Yap</button>
            </div>

            <div id="userActions" style="display: none;">
                <h1 class="display-4">Merhaba, <span id="userName"></span>!</h1>
                <p class="lead">Sistemimize başarılı giriş yaptınız. Panelinize yönlendirilmek için aşağıdaki butona tıklayabilirsiniz.</p>

                <!-- ✅ Admin Paneline Git -->
                <auth-visible asp-area="Admin" asp-controller="Dashboard" asp-action="Index">
                    <a class="btn btn-primary btn-lg" asp-area="Admin" asp-controller="Dashboard" asp-action="Index">Admin Paneline Git</a>
                </auth-visible>

                <!-- ✅ Güvenli Çıkış Butonu -->
                <button id="logout-btn" class="btn btn-danger btn-lg">Çıkış Yap</button>
            </div>

        </div>
    </div>
</div>

