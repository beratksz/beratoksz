@{
    ViewData["Title"] = "Giriş Yap";
}

<div class="container d-flex justify-content-center align-items-center min-vh-100">
    <div class="login-card p-4 shadow-lg">
        <h2 class="text-center mb-4 fw-bold">Giriş Yap</h2>

        <div id="errorMessage" class="text-danger text-center mb-3"></div>

        <form id="loginForm">
            <div class="mb-3">
                <label for="LoginIdentifier" class="form-label">Kullanıcı Adı / Email</label>
                <input type="text" id="LoginIdentifier" class="form-control" required />
            </div>

            <div class="mb-3 password-wrapper">
                <label for="Password" class="form-label">Şifre</label>
                <div class="input-group">
                    <input type="password" id="Password" class="form-control" required />
                    <button type="button" class="btn btn-outline-secondary toggle-password"><i class="bx bx-show"></i></button>
                </div>
            </div>

            <div class="form-check mb-3">
                <input type="checkbox" id="RememberMe" class="form-check-input" />
                <label for="RememberMe" class="form-check-label">Beni Hatırla</label>
            </div>

            <button type="submit" class="btn btn-primary w-100 py-2 fw-bold">Giriş Yap</button>
        </form>

        <div class="text-center mt-3">
            <a href="/Account/ForgotPassword" class="text-decoration-none">Şifremi Unuttum?</a>
            <a href="/Account/Register" class="text-decoration-none">Hesabın yok mu? Kayıt Ol</a>
        </div>
    </div>
</div>

<!-- 💡 Stil -->
<link rel="stylesheet" href="~/css/login.css" />

<!-- 💡 Script -->
<script>
    document.querySelector(".toggle-password").addEventListener("click", function () {
        let passwordInput = document.getElementById("Password");
        let icon = this.querySelector("i");
        if (passwordInput.type === "password") {
            passwordInput.type = "text";
            icon.classList.replace("bx-show", "bx-hide");
        } else {
            passwordInput.type = "password";
            icon.classList.replace("bx-hide", "bx-show");
        }
    });

    document.getElementById("loginForm").addEventListener("submit", function (event) {
        event.preventDefault();
        
        let loginData = {
            LoginIdentifier: document.getElementById("LoginIdentifier").value,
            Password: document.getElementById("Password").value,
            RememberMe: document.getElementById("RememberMe").checked
        };

        fetch("/api/ApiAccount/login", {
            method: "POST",
            headers: { "Content-Type": "application/json" },
            body: JSON.stringify(loginData)
        })
        .then(response => {
            if (!response.ok) {
                return response.json().then(err => { throw new Error(err.message || "Giriş başarısız"); });
            }
            return response.json();
        })
        .then(data => {
            return fetch("/api/ApiAccount/check-auth"); // Kullanıcıyı tekrar kontrol et
        })
        .then(response => response.json())
        .then(authData => {
            if (authData.isAuthenticated) {
                window.location.href = "/"; // Başarıyla giriş yapınca anasayfaya yönlendir
            }
        })
        .catch(error => {
            document.getElementById("errorMessage").innerText = error.message;
        });
    });
</script>
