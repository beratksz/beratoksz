@model beratoksz.Models.LoginViewModel
@{
    ViewData["Title"] = "Giriş Yap";
}
<!-- Google Fonts -->
<link href="https://fonts.googleapis.com/css?family=Poppins:300,400,500,600,700" rel="stylesheet">
<style>
    body {
        font-family: 'Poppins', sans-serif;
        background: #f2f2f2;
        margin: 0;
        padding: 0;
    }

    .login-wrap {
        width: 100%;
        max-width: 525px;
        margin: 50px auto;
        min-height: 600px;
        position: relative;
        box-shadow: 0 12px 15px rgba(0,0,0,0.24), 0 17px 50px rgba(0,0,0,0.19);
        background: #fff;
        border-radius: 10px;
        overflow: hidden;
    }

    .login-html {
        padding: 40px 30px;
    }

        .login-html h2 {
            font-weight: 600;
            margin-bottom: 30px;
            color: #333;
        }

    .group {
        margin-bottom: 20px;
    }

        .group label {
            font-size: 14px;
            color: #555;
            margin-bottom: 5px;
            display: block;
        }

        .group .form-control {
            width: 100%;
            padding: 10px;
            border: 1px solid #ddd;
            border-radius: 4px;
        }

        .group .form-check {
            margin-top: 10px;
        }

    .button {
        display: block;
        width: 100%;
        padding: 10px;
        background: #27ae60;
        border: none;
        border-radius: 4px;
        color: #fff;
        font-size: 16px;
        cursor: pointer;
    }

    .text-danger {
        font-size: 13px;
    }
</style>


<h2>@ViewData["Title"]</h2>

<div class="row">
    <div class="col-md-4">
        <form asp-action="Login">
            <h4>Hesabınızla giriş yapın.</h4>
            <hr />
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="LoginIdentifier" class="control-label">Email, Kullanıcı Adı veya Telefon Numarası</label>
                <input asp-for="LoginIdentifier" class="form-control" />
                <span asp-validation-for="LoginIdentifier" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Password" class="control-label">Şifre</label>
                <input asp-for="Password" class="form-control" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
            <div class="form-group">
                <div class="checkbox">
                    <label>
                        <input asp-for="RememberMe" /> @Html.DisplayNameFor(m => m.RememberMe)
                    </label>
                </div>
            </div>
            <div class="form-group">
                <button type="submit" class="btn btn-primary">Giriş Yap</button>
            </div>
        </form>
    </div>
</div>



