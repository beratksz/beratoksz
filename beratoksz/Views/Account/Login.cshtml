@model beratoksz.Models.LoginViewModel
@{
    ViewData["Title"] = "Giriş Yap";
}
<!-- Google Fonts -->
<link href="https://fonts.googleapis.com/css?family=Poppins:300,400,500,600,700" rel="stylesheet">
<style>
    body {
        font-family: 'Poppins', sans-serif;
        background: #f2f2f2;
        margin: 0;
        padding: 0;
    }

    .login-wrap {
        width: 100%;
        max-width: 525px;
        margin: 50px auto;
        min-height: 600px;
        position: relative;
        box-shadow: 0 12px 15px rgba(0,0,0,0.24), 0 17px 50px rgba(0,0,0,0.19);
        background: #fff;
        border-radius: 10px;
        overflow: hidden;
    }

    .login-html {
        padding: 40px 30px;
    }

        .login-html h2 {
            font-weight: 600;
            margin-bottom: 30px;
            color: #333;
        }

    .group {
        margin-bottom: 20px;
    }

        .group label {
            font-size: 14px;
            color: #555;
            margin-bottom: 5px;
            display: block;
        }

        .group .form-control {
            width: 100%;
            padding: 10px;
            border: 1px solid #ddd;
            border-radius: 4px;
        }

        .group .form-check {
            margin-top: 10px;
        }

    .button {
        display: block;
        width: 100%;
        padding: 10px;
        background: #27ae60;
        border: none;
        border-radius: 4px;
        color: #fff;
        font-size: 16px;
        cursor: pointer;
    }

    .text-danger {
        font-size: 13px;
    }
</style>

<div class="login-wrap">
    <div class="login-html">
        <h2 class="text-center">@ViewData["Title"]</h2>
        <form asp-action="Login" method="post">
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="group">
                <label asp-for="Email" class="form-label">Email</label>
                <input asp-for="Email" class="form-control" placeholder="Email adresinizi girin" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div class="group">
                <label asp-for="Password" class="form-label">Şifre</label>
                <input asp-for="Password" class="form-control" placeholder="Şifrenizi girin" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
            <div class="group">
                <div class="form-check">
                    <input asp-for="RememberMe" class="form-check-input" />
                    <label asp-for="RememberMe" class="form-check-label">Beni Hatırla</label>
                </div>
            </div>
            <div class="group">
                <button type="submit" class="button">Giriş Yap</button>
            </div>
        </form>
        <p class="text-center mt-4">Kayıt olmak için <a href="mailto:Admin@example.com">Admin@example.com</a> mail atınız</p>
    </div>
</div>

