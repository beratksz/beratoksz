@{
    ViewData["Title"] = "E-postanı Kontrol Et";
}

<div class="container d-flex justify-content-center align-items-center min-vh-100">
    <div class="card shadow-lg text-center p-4">
        <div id="checkEmailAnimation" style="height: 180px;"></div>
        <h3 class="mt-3 fw-bold">E-postanı Kontrol Et</h3>
        <p class="text-muted">Şifre sıfırlama bağlantısını içeren e-posta adresine bir mail gönderdik. Gelen kutunu kontrol et.</p>
        <a href="/VAccount/Login" class="btn btn-primary mt-3">Giriş Yap</a>
    </div>
</div>

<script src="https://cdnjs.cloudflare.com/ajax/libs/lottie-web/5.7.6/lottie.min.js"></script>
<script>
    lottie.loadAnimation({
        container: document.getElementById('checkEmailAnimation'),
        renderer: 'svg',
        loop: true,
        autoplay: true,
            path: '/lottie/check-mail.json'
    });
</script>

<style>
    body {
        background-color: #ffffff; /* Düz beyaz arka plan */
    }

    .card {
        width: 100%;
        max-width: 450px;
        border-radius: 15px;
    }
</style>
