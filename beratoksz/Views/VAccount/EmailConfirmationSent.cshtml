@{
    ViewData["Title"] = "Email Doğrulama Gönderildi";
    Layout = null; // Bağımsız sayfa
}
<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="utf-8" />
    <title>@ViewData["Title"]</title>
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <!-- Bootstrap -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
    <!-- Lottie ve SweetAlert2 (gerekirse) -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/lottie-web/5.7.6/lottie.min.js"></script>
    <style>
        body {
            background-color: #ffffff; /* Düz beyaz arka plan */
        }

        .confirmation-card {
            max-width: 500px;
            border-radius: 15px;
            background: #ffffff;
            padding: 2rem;
        }
    </style>
</head>
<body>
    <div class="container d-flex justify-content-center align-items-center min-vh-100">
        <div class="confirmation-card shadow-lg text-center">
            <div id="emailAnimation" style="height:200px;"></div>
            <h2 class="fw-bold mb-4">E-postanı Kontrol Et!</h2>
            <p class="mb-4">Doğrulama bağlantısı e-posta adresine gönderildi. Lütfen e-postanı kontrol ederek doğrulama işlemini tamamla.</p>
            <a href="/VAccount/Login" class="btn btn-success">Giriş Yap</a>
        </div>
    </div>

    <!-- Lottie animasyonunu başlat -->
    <script>
        lottie.loadAnimation({
            container: document.getElementById('emailAnimation'),
            renderer: 'svg',
            loop: true,
            autoplay: true,
            path: '/lottie/check-mail.json'
        });
    </script>
</body>
</html>
