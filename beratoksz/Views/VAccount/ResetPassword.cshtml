@{
    ViewData["Title"] = "Şifre Sıfırla";
}

<div class="container d-flex justify-content-center align-items-center min-vh-100">
    <div class="reset-card p-4 shadow-lg">
        <h2 class="text-center mb-4 fw-bold">Şifreni Sıfırla</h2>
        <div id="resetMessage" class="text-center mb-3"></div>
        <form id="resetForm">
            <!-- URL'den gelen userId ve token bilgileri ViewBag ile taşındı -->
            <input type="hidden" id="UserId" value="@ViewBag.UserId" />
            <input type="hidden" id="Token" value="@ViewBag.Token" />
            <div class="mb-3">
                <label for="NewPassword" class="form-label">Yeni Şifre</label>
                <input type="password" id="NewPassword" class="form-control" required minlength="6" />
            </div>
            <div class="mb-3">
                <label for="ConfirmNewPassword" class="form-label">Yeni Şifreyi Onayla</label>
                <input type="password" id="ConfirmNewPassword" class="form-control" required minlength="6" />
            </div>
            <button type="submit" class="btn btn-primary w-100 py-2 fw-bold">Şifre Sıfırla</button>
        </form>
        <div class="text-center mt-3">
            <a href="/VAccount/Login" class="text-decoration-none">Giriş Yap</a>
        </div>
    </div>
</div>

<link rel="stylesheet" href="~/css/login.css" />

<script>
    document.getElementById("resetForm").addEventListener("submit", function(event) {
        event.preventDefault();
        let newPassword = document.getElementById("NewPassword").value.trim();
        let confirmPassword = document.getElementById("ConfirmNewPassword").value.trim();

        if (newPassword !== confirmPassword) {
            document.getElementById("resetMessage").style.color = "red";
            document.getElementById("resetMessage").innerText = "Şifreler eşleşmiyor!";
            return;
        }

        let resetData = {
            UserId: document.getElementById("UserId").value,
            Token: document.getElementById("Token").value,
            NewPassword: newPassword,
            ConfirmPassword: confirmPassword
        };

        fetch("/api/Account/reset-password", {
            method: "POST",
            headers: { "Content-Type": "application/json" },
            body: JSON.stringify(resetData)
        })
        .then(response => {
            if (!response.ok) {
                return response.json().then(err => { throw new Error(err.message || "Şifre sıfırlama başarısız."); });
            }
            return response.json();
        })
        .then(data => {
            document.getElementById("resetMessage").style.color = "green";
            document.getElementById("resetMessage").innerText = data.message || "Şifre sıfırlama başarılı!";
            // 3 saniye sonra login sayfasına yönlendir
            setTimeout(function() {
                window.location.href = "/VAccount/Login";
            }, 3000);
        })
        .catch(error => {
            document.getElementById("resetMessage").style.color = "red";
            document.getElementById("resetMessage").innerText = error.message;
        });
    });
</script>
