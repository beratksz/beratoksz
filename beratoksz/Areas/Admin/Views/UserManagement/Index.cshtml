@model IEnumerable<beratoksz.Models.UserViewModel>
@{
    ViewData["Title"] = "Kullanıcı Yönetimi";
}

<div class="container py-5">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="mb-0">Kullanıcı Yönetimi</h2>
        <a href="@Url.Action("Create", "UserManagement", new { area = "Admin" })" class="btn btn-success">
            <i class="bx bx-plus"></i> Yeni Kullanıcı Ekle
        </a>
    </div>

    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            @TempData["SuccessMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }
    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            @TempData["ErrorMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    <div class="table-responsive">
        <table class="table table-hover table-bordered">
            <thead class="table-dark">
                <tr>
                    <th>ID</th>
                    <th>Email</th>
                    <th>Roller</th>
                    <th>Oluşturulma Tarihi</th>
                    <th class="text-center">İşlemler</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var user in Model)
                {
                    <tr>
                        <td>@user.Id</td>
                        <td>@user.Email</td>
                        <td>
                            @foreach (var role in user.Roles)
                            {
                                <span class="badge bg-primary">@role</span>
                            }
                        </td>
                        <td>@user.CreatedAt.ToString("dd.MM.yyyy HH:mm")</td>
                        <td class="text-center">
                            <a href="@Url.Action("Details", "UserManagement", new { area = "Admin", id = user.Id })" class="btn btn-info btn-sm"><i class="bx bx-show"></i> Detay</a>
                            <a href="@Url.Action("Edit", "UserManagement", new { area = "Admin", id = user.Id })" class="btn btn-warning btn-sm"><i class="bx bx-edit"></i> Düzenle</a>
                            <form asp-controller="UserManagement" asp-action="DeleteConfirmed" asp-route-area="Admin" method="post" class="d-inline" onsubmit="return confirm('Silmek istediğinize emin misiniz?');">
                                @Html.AntiForgeryToken()
                                <input type="hidden" name="id" value="@user.Id" />
                                <button type="submit" class="btn btn-danger btn-sm"><i class="bx bx-trash"></i> Sil</button>
                            </form>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>