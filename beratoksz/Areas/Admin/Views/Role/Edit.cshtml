@model beratoksz.Models.RoleViewModel

@{
    ViewData["Title"] = "Rol Düzenle";
}

<div class="container-fluid mt-4">
    <h1>Rol Düzenle</h1>
    <form asp-action="Edit" asp-controller="Role" asp-area="Admin" method="post">
        @Html.AntiForgeryToken()
        <input type="hidden" asp-for="Id" />

        <div class="mb-3">
            <label asp-for="Name" class="form-label"></label>
            <input asp-for="Name" class="form-control" placeholder="Rol Adını Güncelle" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>

        <button type="submit" class="btn btn-primary">Güncelle</button>
        <a href="@Url.Action("Index", "Role", new { area = "Admin" })" class="btn btn-secondary">İptal</a>
    </form>
</div>
